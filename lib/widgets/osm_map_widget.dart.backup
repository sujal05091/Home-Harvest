/// Helper to create polylines (routes)
class PolylineHelper {
  /// Create a route polyline
  static Polyline createRoute({
    required List<LatLng> points,
    Color color = Colors.blue,
    double width = 4.0,
  }) {
    return Polyline(
      points: points,
      color: color,
      strokeWidth: width,
      borderColor: Colors.white,
      borderStrokeWidth: 1.0,
    );
  }
